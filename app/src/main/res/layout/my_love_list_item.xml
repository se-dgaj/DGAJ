<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FBF3DB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="56dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_waiting_list" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myLove_ResNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/superbold"
                android:text="NAME"
                android:textColor="#B35A0E"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/myLove_ResAddrTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/superbold"
                android:text="Addr"
                android:textColor="#B35A0E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/myLove_ResTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/superbold"
                android:text="Time"
                android:textColor="#B35A0E"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


        </LinearLayout>

        <Button
            android:id="@+id/btn_delete_love"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/ic_picked"
            android:fontFamily="@font/superbold"/>
    </LinearLayout>
</LinearLayout>