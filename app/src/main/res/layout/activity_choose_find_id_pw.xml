<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose_Find_ID_PW"
    android:id="@+id/Choose_Find_ID_PW"
    android:background="#F9F1D9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/txt_choose_find_id_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/neo"
            android:text="아이디/비밀번호 찾기"
            android:textColor="#B35A0E"
            android:textSize="35dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="409dp"
            android:layout_height="7dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="22dp"
            android:background="#B35A0E"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/neo"
            android:text="찾을 항목을 선택해 주세요"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#B35A0E"
            android:textSize="28dp" />

        <RadioGroup
            android:id="@+id/choose_find_type"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_find_id"
                android:layout_width="145dp"
                android:layout_height="48dp"
                android:background="@drawable/txt_input"
                android:backgroundTint="#FAE7B0"
                android:buttonTint="#B35A0E"
                android:fontFamily="@font/superbold"
                android:gravity="center"
                android:text="ID 찾기"
                android:textColor="#B35A0E" />

            <Button
                android:id="@+id/btn_find_pw"
                android:layout_width="145dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/txt_input"
                android:backgroundTint="#F9E6AF"
                android:buttonTint="#B35A0E"
                android:fontFamily="@font/superbold"
                android:gravity="center"
                android:text="PW 찾기"
                android:textColor="#B35A0E" />

        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>