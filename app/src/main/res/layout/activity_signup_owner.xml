<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="#FBF3DB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_signup_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Owner 회원가입"
            android:fontFamily="@font/neo"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="9dp"
            android:textColor="#B35A0E"
            android:textSize="35dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="409dp"
            android:layout_height="7dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="22dp"
            android:background="#B35A0E"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_opendata_id"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/superbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="식당\n고유번호"
                    android:textColor="#B35A0E"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/opendata_id"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/txt_input"
                    android:ems="10"
                    android:inputType="number" />


                <Button
                    android:id="@+id/btn_opendata_id_check"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_org"
                    android:fontFamily="@font/superbold"
                    android:text="등록 확인"
                    android:textColor="#FFFFFF" />


            </LinearLayout>

            <TextView
                android:id="@+id/opendata_resname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:inputType="text"
                android:text=""
                android:textStyle="bold"
                android:textColor="#B35A0E"/>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_id_join"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/superbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="아이디"
                    android:textColor="#B35A0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id_join"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/txt_input"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <Spinner
                    android:id="@+id/spinner_email_domains"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:entries="@array/email_domains" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_id_check"
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:layout_gravity="center|end"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_org"
                android:fontFamily="@font/superbold"
                android:text="아이디 체크"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_pw_join"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/superbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="비밀번호"
                    android:textColor="#B35A0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pw_join"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/txt_input"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_name_join"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/superbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="이름"
                    android:textColor="#B35A0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/name_join"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/txt_input"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/superbold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="전화번호"
                    android:layout_marginEnd="5dp"
                    android:textColor="#B35A0E"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/superbold"
                    android:text="010 -"
                    android:textColor="#B35A0E"
                    android:textSize="28sp" />

                <EditText
                    android:id="@+id/tel_join01"
                    android:layout_width="99dp"
                    android:layout_height="50dp"
                    android:background="@drawable/txt_input"
                    android:ems="10"
                    android:inputType="phone"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginEnd="2.5dp"
                    android:text=" -"
                    android:textColor="#B35A0E"
                    android:textSize="28sp" />

                <EditText
                    android:id="@+id/tel_join02"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/txt_input"
                    android:ems="10"
                    android:inputType="phone"
                    android:maxLength="4" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_join"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_org"
                android:fontFamily="@font/superbold"
                android:text="등록"
                android:textColor="#FFFFFF"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>