<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_restaurantDetail"
    android:background="#FBF3DB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_happy_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="9dp"
            android:textColor="#B35A0E"
            android:textSize="35dp"
            android:text="행복 나누기"
            android:fontFamily="@font/neo"/>

        <TextView
            android:layout_width="409dp"
            android:layout_height="7dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="22dp"
            android:background="#B35A0E"
            tools:ignore="MissingConstraints" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_donating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:scrollbarSize="1dp"
                    android:scrollbarDefaultDelayBeforeFade="500000"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarThumbVertical="@drawable/scrollbar"
                    android:padding="16dp">
                </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>