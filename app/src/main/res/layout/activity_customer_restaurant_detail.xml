<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_restaurantDetail"
    android:background="#FBF3DB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_shop_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/neo"
                android:text="가게 상세 페이지"
                android:textColor="#B35A0E"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/donating_angel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_angel"/>

        </LinearLayout>

        <TextView
            android:layout_width="409dp"
            android:layout_height="7dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="22dp"
            android:background="#B35A0E"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/framelayout"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superregular"
                        android:gravity="center|start"
                        android:text="이름 :"
                        android:textColor="#B35A0E"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_shop_phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/superregular"
                        android:gravity="center|start"
                        android:text="전화번호 :"
                        android:textColor="#B35A0E"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/txt_shop_cnt_picked"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/superregular"
                        android:textColor="#B35A0E"
                        android:textSize="15dp" />

                    <ToggleButton
                        android:id="@+id/btn_pick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/confirm_btn"
                        android:backgroundTint="#B35A0E"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/superregular"
                android:gravity="center|start"
                android:text="주소 :"
                android:textColor="#B35A0E"
                android:textSize="20dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:scrollbarDefaultDelayBeforeFade="500000"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="1dp"
            android:scrollbarThumbVertical="@drawable/scrollbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_shop_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superbold"
                        android:gravity="center"
                        android:text="[상세 설명]"
                        android:textColor="#B35A0E"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_shop_cuisine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superregular"
                        android:gravity="center"
                        android:text="카테고리 :"
                        android:textColor="#B35A0E"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_shop_top_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/superregular"
                        android:gravity="center"
                        android:text="대표메뉴 :"
                        android:textColor="#B35A0E"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_org"
                android:fontFamily="@font/superbold"
                android:text="줄서기"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>