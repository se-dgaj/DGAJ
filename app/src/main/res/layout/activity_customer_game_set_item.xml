<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_game_setItem"
    android:background="#FBF3DB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_menu_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 정하기"
            android:fontFamily="@font/neo"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="9dp"
            android:textColor="#B35A0E"
            android:textStyle="bold"
            android:textSize="35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="2dp"
            android:background="#B35A0E"/>

        <TextView
            android:id="@+id/txt_menu_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#B35A0E"
            android:fontFamily="@font/superbold"
            android:text="게임에 넣을 메뉴들을 입력해주세요 (6개)" />

        <EditText
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="1dp"
            android:ems="10"
            android:layout_gravity="center"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_next"
            android:layout_gravity="center"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="다음"
            android:fontFamily="@font/superbold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_org"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>