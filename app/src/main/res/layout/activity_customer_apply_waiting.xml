<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_applyWaiting"
    android:background="#FBF3DB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_lineup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="9dp"
            android:text="줄서기"
            android:fontFamily="@font/neo"
            android:textColor="#B35A0E"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="22dp"
            android:background="#B35A0E"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_lineup_tel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="전화번호 "
                android:fontFamily="@font/superbold"
                android:textColor="#B35A0E"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/lineup_tel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:fontFamily="@font/superregular"
                android:hint="전화번호를 입력하세요"
                android:inputType="phone"
                android:textColorHint="#B35A0E" />

            <TextView
                android:id="@+id/txt_lineup_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="이름 "
                android:fontFamily="@font/superbold"
                android:textColor="#B35A0E"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/lineup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="이름을 입력하세요"
                android:fontFamily="@font/superregular"
                android:inputType="text"
                android:text=""
                android:textColorHint="#B35A0E" />

            <TextView
                android:id="@+id/txt_reservation_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="인원수 "
                android:fontFamily="@font/superbold"
                android:textColor="#B35A0E"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_reservation_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="인원수를 입력하세요"
                android:fontFamily="@font/superregular"
                android:inputType="text"
                android:text=""
                android:textColorHint="#B35A0E" />

<!--            <TextView-->
<!--                android:id="@+id/txt_now_waiting"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"-->
<!--                android:gravity="center"-->
<!--                android:text="현재 대기 현황"-->
<!--                android:fontFamily="@font/superbold"-->
<!--                android:textColor="#B35A0E"-->
<!--                android:textSize="20dp" />-->
        </LinearLayout>


        <Button
            android:id="@+id/btn_confirm_line_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_org"
            android:text="확인"
            android:fontFamily="@font/superbold"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>